[flake8]
extend-ignore = E203
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache environment directories
    __pycache__,
    .venv,
    # The conf file is mostly autogenerated, ignore it
    development/configuration.py,
    # The migration files are mostly autogenerated, ignore them
    migrations,
    # The docs directory contains documentation
    docs,
    build,
    # This contains builds of flake8 that we don't want to check
    dist
# Github View Window Width
max-line-length=119